<Window x:Class="Presentation.View.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:Presentation.ViewModel"
        xmlns:local="clr-namespace:Presentation.View"
        Title="Object Window" Height="400" Width="600">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="ObjectList" ItemsSource="{Binding CatalogList}" SelectionChanged="Catalog_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding name}" Margin="0 0 0 5" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <Border Grid.Column="1" BorderThickness="1" BorderBrush="Black">
            <StackPanel Margin="10">
                <TextBlock x:Name="ObjectName" FontSize="18" FontWeight="Bold" Margin="0 0 0 10" Text="{Binding SelectedEntry}" />
                <TextBlock x:Name="ObjectDescription" Text="{Binding name}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>